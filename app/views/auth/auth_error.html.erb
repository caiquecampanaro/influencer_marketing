<div class="auth-error-container">
  <div class="error-card">
    <div class="error-icon">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="12" cy="12" r="10"></circle>
        <line x1="12" y1="8" x2="12" y2="12"></line>
        <line x1="12" y1="16" x2="12.01" y2="16"></line>
      </svg>
    </div>
    
    <h1>Erro de Autorização</h1>
    
    <div class="error-details">
      <p class="error-code">Código do Erro: <%= error_code %></p>
      <p class="error-description"><%= error_description %></p>
    </div>
    
    <div class="error-actions">
      <%= link_to "Tentar Novamente", auth_tiktok_path, class: "retry-btn" %>
      <%= link_to "Voltar para Início", "/", class: "home-btn" %>
    </div>
    
    <!-- Botão para mostrar dados do perfil -->
    <button id="showProfileData">Mostrar Dados do Perfil</button>

    <!-- Área para exibir os dados do perfil -->
    <div id="profileData" style="display:none;">
      <h2>Dados do Perfil:</h2>
      <div id="profileDataContent"></div>
    </div>
  </div>
</div>

<style>
body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  background-color: #f4f4f4;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  margin: 0;
  padding: 20px;
}

.auth-error-container {
  width: 100%;
  max-width: 500px;
}

.error-card {
  background-color: white;
  border-radius: 12px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  padding: 40px;
  text-align: center;
  transition: transform 0.3s ease;
}

.error-icon {
  width: 80px;
  height: 80px;
  color: #FF0050;
  margin: 0 auto 20px;
}

.error-icon svg {
  width: 100%;
  height: 100%;
}

h1 {
  color: #161823;
  margin-bottom: 15px;
  font-size: 24px;
}

.error-details {
  background-color: #f8f8f8;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 25px;
}

.error-code {
  font-weight: bold;
  color: #FF0050;
  margin-bottom: 10px;
}

.error-description {
  color: #606060;
}

.error-actions {
  display: flex;
  justify-content: center;
  gap: 15px;
}

.retry-btn, .home-btn {
  display: inline-block;
  padding: 12px 24px;
  text-decoration: none;
  border-radius: 8px;
  font-weight: 600;
  transition: all 0.3s ease;
}

.retry-btn {
  background-color: #FF0050;
  color: white;
}

.retry-btn:hover {
  background-color: #FF2070;
}

.home-btn {
  background-color: #f0f0f0;
  color: #161823;
}

.home-btn:hover {
  background-color: #e0e0e0;
}

#showProfileData {
  background-color: #4CAF50;
  color: white;
  padding: 12px 24px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-size: 16px;
  transition: background-color 0.3s ease, transform 0.2s ease;
  width: 100%; /* Largura total para responsividade */
  max-width: 300px; /* Largura máxima para telas maiores */
  margin: 10px auto; /* Centralizar o botão */
}

#showProfileData:hover {
  background-color: #3e8e41;
  transform: scale(1.05); /* Efeito de aumento ao passar o mouse */
}

#profileData {
  margin-top: 20px;
  padding: 15px;
  border: 1px solid #ccc;
  border-radius: 5px;
  background-color: #f9f9f9;
}

@media (max-width: 600px) {
  #showProfileData {
    font-size: 14px; /* Tamanho da fonte menor em telas pequenas */
    padding: 10px 20px;
  }
}
</style>

<script>
  document.getElementById('showProfileData').addEventListener('click', function() {
    // Aqui você pode definir os dados do perfil que deseja mostrar
    const profileData = {
      name: 'caiquecampanaro12',
      username: 'caiquecampanaro12',
      bio_description: 'RubyOnRails Developer',
      followers: 3,
      likes: 0
    };

    // Criar HTML para exibir os dados de forma polida
    let profileHtml = '<table style="width: 100%; border-collapse: collapse;">';
    profileHtml += '<tr><th style="border: 1px solid #ccc; padding: 8px;">Campo</th><th style="border: 1px solid #ccc; padding: 8px;">Valor</th></tr>';
    for (const key in profileData) {
      profileHtml += `<tr><td style='border: 1px solid #ccc; padding: 8px;'>${key.replace(/_/g, ' ').toUpperCase()}</td><td style='border: 1px solid #ccc; padding: 8px;'>${profileData[key]}</td></tr>`;
    }
    profileHtml += '</table>';

    // Exibir os dados na área designada
    document.getElementById('profileDataContent').innerHTML = profileHtml;
    document.getElementById('profileData').style.display = 'block';
  });
</script>
